@model QuizApp.Models.JoinQuizViewModel

@{
    ViewData["Title"] = "Wprowadź nick";
}

<h1>Wprowadź nick</h1>

<form asp-action="JoinQuizWithNick" method="post">
    <input type="hidden" asp-for="Token" />
    <input type="hidden" asp-for="QuizId" />
    <div class="form-group">
        <label asp-for="Nick"></label>
        <input asp-for="Nick" class="form-control" />
        <span asp-validation-for="Nick" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dołącz</button>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            var nickField = $('#Nick');
            var errorSpan = $('[data-valmsg-for="Nick"]');

            // Ukryj komunikat na starcie, jeśli pole nie jest puste
            if (nickField.val().trim() !== '') {
                errorSpan.hide();
            }

            // Obsługa zdarzenia input
            nickField.on('input', function () {
                if ($(this).val().trim() !== '') {
                    errorSpan.hide();
                } else {
                    errorSpan.show();
                }
            });
        });
    </script>
}